<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page_accueil" >

    <LinearLayout
        android:id="@+id/imgbanniere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/banniere" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/barre" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/imgbanniere" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/recettes"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/big_button_height"
                    android:layout_marginRight="2dp"
                    android:layout_weight="0.5"
                    android:background="@color/light_blue"
                    android:src="@drawable/bouton_recette" />

                <ImageButton
                    android:id="@+id/nutritionniste"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/big_button_height"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="0.5"
                    android:background="@color/light_blue"
                    android:src="@drawable/bouton_mon_nutritioniste" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/toppad"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <ImageButton
                            android:id="@+id/reseau"
                            android:layout_width="@dimen/small_menu_button"
                            android:layout_height="@dimen/small_menu_button"
                            android:background="@drawable/reseau" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Le Réseau"
                            android:textColor="@color/main_blue"
                            android:textSize="@dimen/textSize" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <ImageButton
                            android:id="@+id/contact"
                            android:layout_width="@dimen/small_menu_button"
                            android:layout_height="@dimen/small_menu_button"
                            android:layout_marginLeft="@dimen/LRspace"
                            android:layout_marginRight="@dimen/LRspace"
                            android:background="@drawable/contact" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Contact"
                            android:textColor="@color/main_blue"
                            android:textSize="@dimen/textSize" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <ImageButton
                            android:id="@+id/nutrition"
                            android:layout_width="@dimen/small_menu_button"
                            android:layout_height="@dimen/small_menu_button"
                            android:background="@drawable/nutrition" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Nutrition"
                            android:textColor="@color/main_blue"
                            android:textSize="@dimen/textSize" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/toppad"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <ImageButton
                            android:id="@+id/imc"
                            android:layout_width="@dimen/small_menu_button"
                            android:layout_height="@dimen/small_menu_button"
                            android:background="@drawable/imc" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Calculer IMC"
                            android:textColor="@color/main_blue"
                            android:textSize="@dimen/textSize" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <ImageButton
                            android:id="@+id/regime"
                            android:layout_width="@dimen/small_menu_button"
                            android:layout_height="@dimen/small_menu_button"
                            android:layout_marginLeft="@dimen/LRspace"
                            android:layout_marginRight="@dimen/LRspace"
                            android:background="@drawable/regimes" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Les Régimes"
                            android:textColor="@color/main_blue"
                            android:textSize="@dimen/textSize" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <ImageButton
                            android:id="@+id/agenda"
                            android:layout_width="@dimen/small_menu_button"
                            android:layout_height="@dimen/small_menu_button"
                            android:background="@drawable/agenda" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Mes RDVs"
                            android:textColor="@color/main_blue"
                            android:textSize="@dimen/textSize" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>